package upei.webserver;

import java.io.IOException;
import java.io.PrintStream;

import org.simpleframework.http.Request;
import org.simpleframework.http.Response;
import org.simpleframework.http.core.Container;

public class RouteConfig  implements Container {

	@Override
	public void handle(Request request, Response response) {
		String urlPath = request.getPath().toString();
		
		try {
			makeUrlRouter(urlPath, response);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	private void makeUrlRouter(String urlPath, Response response) throws IOException {
		switch(urlPath) {
			case "/api/sprint":
				
				PrintStream body = response.getPrintStream();

				response.setValue("Content-Type", "text/plain");
				body.println("Olá, você requisitou a api de sprint");
				body.close();
				break;
		}
	}

}
